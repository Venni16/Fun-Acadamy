    <script>
        const ACCDETAIL = document.getElementById("ACCDETAIL");

        function ACCBTN() {
            ACCDETAIL.style.display = "block";
            gsap.fromTo(ACCDETAIL, { opacity: 0, y: -20 }, { opacity: 1, y: 0, duration: 0.4 });
        }

        function CLSBTN() {
            gsap.to(ACCDETAIL, {
        opacity: 0,
        y: -20,
        duration: 0.3,
        onComplete: () => {
          ACCDETAIL.style.display = "none";
        }
      });
        }

        // Close account details when clicking outside
        document.addEventListener('click', function(event) {
            const accountBtn = document.querySelector('button[onclick="ACCBTN()"]');
            
            if (!ACCDETAIL.contains(event.target) && event.target !== accountBtn && !accountBtn.contains(event.target)) {
                ACCDETAIL.style.display = 'none';
            }
        });

// Navbar animation on page load
window.addEventListener("DOMContentLoaded", () => {
    const tl = gsap.timeline();
    tl.fromTo("spline-viewer", {
      y: 100,
      opacity: -1
    }, {
      opacity: 1,
      y: 0,
      duration: 1.5,
      ease: "ease.in"
    },

    tl.fromTo("#navbar", {
      y: -100,
      opacity: -1
    },{
      opacity: 1,
      y: 0,
      duration: 1.5,
      ease: "ease.in"
    }));

 

    tl.from("#logo", {
      x: -100,
      opacity: 0,
      duration: 0.5,
      ease: "ease.in"
    }, );

    tl.from("#lgoutbtn", {
      x: 100,
      opacity: 0,
      duration: 0.5,
      ease: "ease.in"
    }, );

    tl.from("#head", {
      y: 100,
      opacity: 0,
      duration: 1.5,
      ease: "ease.in"
    }, );
    
  });

  gsap.registerPlugin(ScrollTrigger);
  gsap.fromTo("#clsimg", {
    x: -100,
    opacity: 0
  }, {
    opacity: 1,
    x: 0,
    duration: 1.5,
    ease: "ease.in",
    scrollTrigger: {
      trigger: "#clsimg",
      start: "top 80%",
      toggleActions: "play none none none",
      once: true
    }
  });
  gsap.fromTo("#clsimgcnt", {
    x: 100,
    opacity: 0
  }, {
    opacity: 1,
    x: 0,
    duration: 1.5,
    ease: "ease.in",
    scrollTrigger: {
      trigger: "#clsimgcnt",
      start: "top 80%",
      toggleActions: "play none none none",
      once: true
    }
  });
  gsap.fromTo("#main h1", {
    y: -50,
    opacity: 0
  }, {
    opacity: 1,
    y: 0,
    duration: 1.5,
    ease: "ease.in",
    scrollTrigger: {
      trigger: "#main h1",
      start: "top 80%",
      toggleActions: "play none none none",
      once: true
    }
  });
  gsap.fromTo("#main p", {
    y: 50,
    opacity: 0
  }, {
    opacity: 1,
    y: 0,
    duration: 1.5,
    ease: "ease.in",
    scrollTrigger: {
      trigger: "#main p",
      start: "top 80%",
      toggleActions: "play none none none",
      once: true
    } 
  });

  gsap.fromTo("#cards div", {
    y: 50,
    opacity: 0
  }, {
    opacity: 1,
    y: 0,
    duration: 1.5,
    ease: "ease.in",
    stagger: 0.2,
    scrollTrigger: {
      trigger: "#cards",
      start: "top 80%",
      toggleActions: "play none none none",
      once: true
    }
  });
  

  
  
    </script> 
